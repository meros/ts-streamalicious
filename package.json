{
  "name": "@meros/streamalicious",
  "version": "0.0.1",
  "description": "Async first streaming library written in TypeScript",
  "main": "lib/streamalicious.js",
  "types": "lib/streamalicious.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "playground:build": "npm run build && node scripts/build-playground.js",
    "playground:dev": "npm run playground:build && npx http-server playground -o"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meros/ts-streamalicious.git"
  },
  "keywords": [
    "TypeScript",
    "async",
    "stream",
    "library"
  ],
  "author": "Alexander Schrab",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/meros/ts-streamalicious/issues"
  },
  "homepage": "https://github.com/meros/ts-streamalicious",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "esbuild": "^0.19.10",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.7.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "testMatch": [
      "**/src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ]
  }
}
